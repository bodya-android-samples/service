<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="ru.popov.bodya.boundedlocalservice.activity.BoundLocalActivity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" />

    <Button
        android:id="@+id/first_method_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_method" />

    <Button
        android:id="@+id/second_method_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/second_method" />

    <Button
        android:id="@+id/third_method_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/third_method" />



</LinearLayout>
